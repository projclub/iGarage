<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmant.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile !!"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:padding="15dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImgSelector"
                    android:layout_width="149dp"
                    android:layout_height="151dp"
                    android:layout_gravity="center"
                    android:contentDescription="Profile Image Selector"
                    android:src="@drawable/_085406_avatar_man_profile_user_icon"
                    app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                    app:strokeColor="@color/Blue"
                    app:strokeWidth="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biki Das"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Remaining profile information cards here -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@drawable/background2"
                android:layout_marginTop="0dp"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/edit_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/edit"
                    android:contentDescription="editButton"
                    />

                <!-- Name -->
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: John Doe"
                    android:layout_marginBottom="8dp"/>

                <!-- Car Name and Model -->
                <TextView
                    android:id="@+id/text_car_name_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car: Toyota Camry"
                    android:layout_marginBottom="8dp"/>

                <!-- Car Number -->
                <TextView
                    android:id="@+id/text_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Number: ABC1234"
                    android:layout_marginBottom="8dp"/>

                <!-- Mobile Number -->
                <TextView
                    android:id="@+id/text_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number: +1234567890"
                    android:layout_marginBottom="8dp"/>

                <!-- Email -->
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: example@example.com"
                    android:layout_marginBottom="16dp"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>

<!-- fragment_booking.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book a "
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"/>
        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Experience!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingTop="1dp"
            android:paddingBottom="16dp"/>


        <!-- CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/booking_card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/iot_parking" />

                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parking Place Name"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:paddingLeft="16dp"/>

                <TextView
                    android:id="@+id/address_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:paddingLeft="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/free_spaces_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Spaces: 10"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:paddingLeft="16dp"
                        android:paddingBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:text="Book Now"
                        android:textColor="@color/neon"
                        android:textSize="20sp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



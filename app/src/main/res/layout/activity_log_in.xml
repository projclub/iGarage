<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:backgroundTint="@color/Ash">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:id="@+id/textViewSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to Continue"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/textViewWelcome"
        android:layout_alignStart="@id/textViewWelcome"
        android:layout_marginTop="1dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/textViewSignIn"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:paddingLeft="15dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="  Password"
        android:inputType="textPassword"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawableLeft="@drawable/wpf_password1"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Login"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/neon"/>

    <TextView
        android:id="@+id/my_text_view"
        android:layout_width="117dp"
        android:layout_height="24dp"
        android:layout_below="@+id/buttonSignup"
        android:layout_alignStart="@+id/buttonSignup"
        android:layout_alignEnd="@+id/buttonSignup"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="97dp"
        android:clickable="true"
        android:onClick="onTextViewClick"
        android:text="Forget password ?" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_text_view"
        android:layout_alignStart="@+id/buttonSignup"
        android:layout_alignEnd="@+id/buttonSignup"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/group_11"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="71dp"
        android:text="Social  media Login" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/flat_color_icons_google" />

    <ImageButton
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/logos_facebook" />

    <ImageButton
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="-19dp"
        android:background="@drawable/skill_icons_twitter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb"
        android:layout_alignStart="@+id/fb"
        android:layout_marginStart="-76dp"
        android:layout_marginTop="19dp"
        android:text="Dont have an account " />

    <TextView
        android:onClick="signUpD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb"
        android:layout_alignStart="@+id/fb"
        android:layout_marginStart="66dp"
        android:layout_marginTop="20dp"
        android:text="Sign Up" />
</RelativeLayout>
